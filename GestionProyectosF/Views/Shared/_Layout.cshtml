<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Gestión de Proyectos</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos adicionales -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /* Fondo general */
        body {
            background-image: url("../imagen/proyectumFondo.jpg"); /* Ruta de tu imagen */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Encierra el contenido principal para que no sea transparente */
        .content-wrapper {
            flex: 1; /* Permite que el contenido se expanda si es necesario */
            background-color: rgba(255, 255, 255, 0.95); /* Fondo blanco con leve transparencia */
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Estilo para el footer */
        footer {
            background-color: #343a40; /* Fondo oscuro */
            color: white;
            text-align: center;
            padding: 1rem 0;
        }

        /* Estilo del logo en la barra de navegación */
        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

        /* Estilo de enlaces del menú */
        .navbar-dark .navbar-nav .nav-link {
            color: #ffffff;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #ffc107;
            }
    </style>
</head>
<body>
    <!-- Barra de Navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/imagen/proyecto.png" alt="Logo">
                GESTIÓN PROYECTOS
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Login", "Login", new { area = "" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="container py-4 content-wrapper">
        @RenderBody()
    </div>

    <!-- Footer Fijo -->
    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </div>
    </footer>

    <!-- Scripts de Bootstrap y adicionales -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
